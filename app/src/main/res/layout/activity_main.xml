<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yawarkhan.mobileselfencryption.MainActivity"
    android:weightSum="1"
    android:background="#323859">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textSize="15dp"
        android:id="@+id/textView2"
        android:layout_x="100dp"
        android:layout_y="200dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_x="100dp"
        android:layout_y="280dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:id="@+id/Password"
        android:layout_x="100dp"
        android:layout_y="310dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Email"
        android:layout_x="100dp"
        android:layout_y="220dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textSize="15dp"
        android:id="@+id/Login"
        android:alpha="100"
        android:layout_x="100dp"
        android:layout_y="380dp"
        android:background="@drawable/login_button"
        android:textColor="#ffffff" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Signup"
        android:textSize="15dp"
        android:id="@+id/Signup"
        android:alpha="100"
        android:layout_x="0dp"
        android:layout_y="500dp"
        android:background="@drawable/signup_button"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:text="Offline"
        android:id="@+id/OfflineButton"
        android:layout_x="100dp"
        android:layout_y="430dp"
        android:background="@drawable/login_button"
        android:textColor="#ffffff"
        android:textSize="15dp" />


</AbsoluteLayout>
